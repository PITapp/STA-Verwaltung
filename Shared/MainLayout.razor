@inherits LayoutComponentBase
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout Style="grid-template-columns: auto 1fr auto; grid-template-areas: 'rz-header rz-header rz-header' 'rz-sidebar rz-body rz-right-sidebar'">
    <RadzenHeader Style="height: 48px">
        <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0">
            <RadzenColumn Size="5" Style="height: 48px">
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="Radzen.JustifyContent.Start" AlignItems="Radzen.AlignItems.Center">
                    <RadzenButton Style="width: 48px; height: 48px; font-size: 24px; padding: 0px" Click="@(() => leftSidebarExpanded = !leftSidebarExpanded)">
                        <RadzenIcon Icon="menu" Style="font-size: 24px"></RadzenIcon>
                    </RadzenButton>
                    <RadzenImage Path="images\Schriftzug STA-Verwaltung klein.png" Style="height: 32px; margin-left: 16px"></RadzenImage>
                </RadzenStack>
            </RadzenColumn>
            <RadzenColumn Size="7">
                <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End">
                    <RadzenButton Click="@ButtonMenueClick" Style="width: 48px; height: 48px; font-size: 24px; padding: 0px">
                        <RadzenIcon Icon="apps" Style="font-size: 24px"></RadzenIcon>
                    </RadzenButton>
                    <RadzenButton Click="@(() => leftSidebarExpanded = !leftSidebarExpanded)" Style="width: 48px; height: 48px; font-size: 24px; padding: 0px">
                        <RadzenIcon Icon="notifications" Style="font-size: 24px"></RadzenIcon>
                    </RadzenButton>
                    <RadzenButton Click="@(() => rightSidebarExpanded = !rightSidebarExpanded)" Style="width: 48px; height: 48px; font-size: 24px; padding: 0px">
                        <RadzenIcon Icon="settings" Style="font-size: 24px"></RadzenIcon>
                    </RadzenButton>
                    <RadzenProfileMenu Visible="@Security.IsAuthenticated()" Click="@ProfileMenuClick" Style="padding-right: 16px; padding-left: 16px">
                        <ChildContent>
                            <RadzenProfileMenuItem Path="profile" Icon="settings" Text="Profile" />
                            <RadzenProfileMenuItem Path="application-users" Icon="person" Text="Users" />
                            <RadzenProfileMenuItem Path="application-roles" Icon="security" Text="Roles" />
                            <RadzenProfileMenuItem Text="Logout" Value="Logout" Icon="power_settings_new" />
                        </ChildContent>
                        <Template>
                            @Security.User?.Name
                            <RadzenImage Path="images\KeinBildPerson.png" Style="width: 32px; height: 32px; border-radius: 50%; margin-left: 8px; margin-right: 8px"></RadzenImage>
                        </Template>
                    </RadzenProfileMenu>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@leftSidebarExpanded" style="position: relative" Responsive="false">
        <RadzenPanelMenu Style="padding-right: 12px; padding-left: 12px">
            <RadzenPanelMenuItem Text="Dashboard" Path="dashboard" Icon="dashboard" />
            <RadzenPanelMenuItem Text="Personen" Path="personen" Icon="people_alt"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Gemeinden" Path="gemeinden" Icon="chevron_right"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="Vereinigungen" Text="Vereinigungen" Icon="chevron_right"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Verbände" Path="verbände" Icon="chevron_right"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Institutionen" Path="institutionen" Icon="chevron_right"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Kategorien" Path="kategorien" Icon="chevron_right"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Ämter" Path="ämter" Icon="chevron_right"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Quartalsberichte" Path="Quartalsberichte" Icon="chevron_right"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Veranstaltungen" Path="Veranstaltungen" Icon="chevron_right"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Konferenzen" Path="Konferenzen" Icon="chevron_right"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Mitarbeiter" Path="Mitarbeiter" Icon="chevron_right"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Dienstbericht" Path="Dienstbericht" Icon="chevron_right"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Verträge" Path="verträge" Icon="chevron_right"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Filter" Path="filter" Icon="chevron_right"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Statistik" Path="statistik" Icon="chevron_right"></RadzenPanelMenuItem>
             <RadzenPanelMenuItem Text="Einstellungen" Path="einstellungen" Icon="chevron_right">
                <RadzenPanelMenuItem Text="Benutzer"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Stammdaten"> </RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Dienstbericht"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Duplikate"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>
       </RadzenPanelMenu>
        <RadzenStack AlignItems="Radzen.AlignItems.Center" Gap="0" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding);">
            <RadzenText Text="STA-Verwaltung v1.7.3" TextStyle="Radzen.Blazor.TextStyle.Caption" style="color: var(--rz-text-disabled-color);" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
            <RadzenText Text="Copyright Ⓒ 2023" TextStyle="Radzen.Blazor.TextStyle.Caption" class="rz-mb-0" style="color: var(--rz-text-disabled-color);" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
        </RadzenStack>
   </RadzenSidebar>
    <RadzenBody>
            <RadzenRow class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" Style="padding: 0px; padding-top: 0px; padding-bottom: 0px; padding-right: 0px; padding-left: 0px">
            <RadzenColumn Size="12">
            @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>
    <RadzenSidebar @bind-Expanded="@rightSidebarExpanded" Style="width: 300px; grid-area: rz-right-sidebar;" Responsive="false">
        <div class="rz-p-4">
            Right Sidebar
        </div>
    </RadzenSidebar>
</RadzenLayout>

@code {
    // Setze sidebarExpanded während der Bearbetung auf "true", damit du die Sidebar siehst und bearbeiten kannst!
    bool leftSidebarExpanded = true;
    bool rightSidebarExpanded = false;
}