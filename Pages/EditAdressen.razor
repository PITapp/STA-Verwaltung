            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Notiz Kommunikation" Component="NotizKommunikation" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@adressen.NotizKommunikation" Name="NotizKommunikation" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Notiz" Component="Notiz" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@adressen.Notiz" Name="Notiz" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Adressen Arten" Component="AdressenArten" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@adressenArtenForAdressArt" TextProperty="TitelMehrzahl" ValueProperty="AdressArt" AllowClear=true
                         Placeholder="Choose AdressenArten" style="display: block; width: 100%" @bind-Value="@adressen.AdressArt" Name="AdressArt"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Adressen Anreden" Component="AdressenAnreden" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@adressenAnredenForAnredeCode" TextProperty="Titel" ValueProperty="AnredeCode" AllowClear=true
                         Placeholder="Choose AdressenAnreden" style="display: block; width: 100%" @bind-Value="@adressen.AnredeCode" Name="AnredeCode"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Bundeslaender" Component="Bundeslaender" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@bundeslaenderForBundeslandCode" TextProperty="Titel" ValueProperty="BundeslandCode" AllowClear=true
                         Placeholder="Choose Bundeslaender" style="display: block; width: 100%" @bind-Value="@adressen.BundeslandCode" Name="BundeslandCode"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Adressen Familienstaende" Component="AdressenFamilienstaende" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@adressenFamilienstaendeForFamilienstandCode" TextProperty="Kurzzeichen" ValueProperty="FamilienstandCode" AllowClear=true
                         Placeholder="Choose AdressenFamilienstaende" style="display: block; width: 100%" @bind-Value="@adressen.FamilienstandCode" Name="FamilienstandCode"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Gemeinden" Component="Gemeinden" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@gemeindenForGemeindeNr" TextProperty="Info" ValueProperty="GemeindeNr" AllowClear=true
                         Placeholder="Choose Gemeinden" style="display: block; width: 100%" @bind-Value="@adressen.GemeindeNr" Name="GemeindeNr"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Adressen Geschlechter" Component="AdressenGeschlechter" style="width: 100%" />
