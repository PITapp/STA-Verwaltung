            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Staatsbuergerschaft2" Component="Staatsbuergerschaft2" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@adressen.Staatsbuergerschaft2" Name="Staatsbuergerschaft2" />
