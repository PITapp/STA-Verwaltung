                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="STAVerwaltung.Models.dbSTAVerwaltung.Organisationen" Property="Info" Title="Info">
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>
    </RadzenCard>

    </RadzenColumn>
        <RadzenColumn SizeMD=6>
